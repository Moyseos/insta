

		<div class="signUp">
			<form method="post" class="signUp-form">
				<h1 class=signUp-form-heading>SignUp Form</h1>

				<% if (typeof error !== "undefined") { %>
						<div class="error"><%= error %></div>
					<% } %>

				<label>First Name:</label>
				<input class="signup-input" type="text" name="firstName" placeholder="Enter First Name" required/>
				<br>
				<label>Last Name:</label>
				<input class="signup-input" type="text" name="lastName" placeholder="Enter Last Name" required/>
			  <br>
				<label>Users Name:</label>
				<input class="signup-input" type="text" name="userName" placeholder="Enter User Name" required/>
				<br>
				<label>Email Address:</label>
				<input class="signup-input" type="text" name="email" placeholder="Enter Email" required/>
				<br>
				<label>Password:</label>
				<input class="signup-input" type="password" name="password" placeholder="Enter Password" required/>
				<br>
				<label>Remember Me:
				<input class="signup-input" type="checkbox" checked="checked">
				<br>
				<button class="signUp-form-button">SignUp</button>

			</form>
		</div>
